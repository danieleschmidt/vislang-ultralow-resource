# EditorConfig helps maintain consistent coding styles
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Jupyter notebooks
[*.ipynb]
indent_size = 2
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# Makefile
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# Documentation
[*.rst]
max_line_length = 100

# Test files
[test_*.py]
max_line_length = 100

# Requirements files
[requirements*.txt]
insert_final_newline = false