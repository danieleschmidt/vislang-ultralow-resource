# VisLang-UltraLow-Resource Environment Configuration
# Copy this file to .env and fill in your specific values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
APP_ENV=development

# Application version (automatically set by CI/CD)
APP_VERSION=0.1.0

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# DATA SOURCES & API KEYS
# =============================================================================

# United Nations OCHA API
OCHA_API_KEY=your_ocha_api_key_here
OCHA_BASE_URL=https://api.reliefweb.int/v1

# World Health Organization API
WHO_API_KEY=your_who_api_key_here
WHO_BASE_URL=https://apps.who.int/gho/athena/api

# UNICEF API (if available)
UNICEF_API_KEY=your_unicef_api_key_here
UNICEF_BASE_URL=https://data.unicef.org/api

# World Food Programme API
WFP_API_KEY=your_wfp_api_key_here
WFP_BASE_URL=https://api.wfp.org/alpha

# Custom data source URLs (comma-separated)
CUSTOM_SOURCES=https://example-ngo.org/reports,https://another-org.org/data

# =============================================================================
# OCR & PROCESSING CONFIGURATION
# =============================================================================

# Tesseract configuration
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANGUAGE_PACKS=eng,ara,hin,ben,spa,fra,por,swa,amh,hau,yor,ibo,som,tir

# EasyOCR configuration
EASYOCR_GPU=true
EASYOCR_LANGUAGES=['en','ar','hi','bn','es','fr','pt','sw']

# PaddleOCR configuration
PADDLEOCR_USE_GPU=true
PADDLEOCR_LANG=ch

# Image processing settings
MAX_IMAGE_SIZE=2048
IMAGE_QUALITY_THRESHOLD=0.8
OCR_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# HuggingFace Hub configuration
HF_TOKEN=your_huggingface_token_here
HF_CACHE_DIR=/tmp/huggingface_cache

# Default model configurations
DEFAULT_VL_MODEL=facebook/mblip-mt0-xl
DEFAULT_TEXT_MODEL=google/mt5-xl
DEFAULT_VISION_MODEL=microsoft/swin-base-patch4-window7-224

# Training configuration
TRAINING_BATCH_SIZE=8
TRAINING_LEARNING_RATE=5e-5
TRAINING_NUM_EPOCHS=10
TRAINING_WARMUP_STEPS=1000

# GPU/CPU configuration
CUDA_VISIBLE_DEVICES=0
TORCH_NUM_THREADS=4

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# Database URL (PostgreSQL recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/vislang_db

# Redis URL for caching
REDIS_URL=redis://localhost:6379/0

# File storage configuration
STORAGE_TYPE=local  # local, s3, gcs, azure
STORAGE_PATH=/data/vislang-storage

# AWS S3 configuration (if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=vislang-data-bucket
AWS_S3_REGION=us-west-2

# Google Cloud Storage (if STORAGE_TYPE=gcs)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcs-credentials.json
GCS_BUCKET=vislang-data-bucket

# Azure Blob Storage (if STORAGE_TYPE=azure)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=vislang-data

# =============================================================================
# QUALITY ASSURANCE
# =============================================================================

# Quality control thresholds
MIN_TEXT_LENGTH=10
MAX_TEXT_LENGTH=1000
MIN_IMAGE_WIDTH=100
MIN_IMAGE_HEIGHT=100
DUPLICATE_THRESHOLD=0.95

# Human validation configuration
ENABLE_HUMAN_VALIDATION=true
VALIDATION_SAMPLE_RATE=0.1
VALIDATION_API_URL=https://validation-service.example.com

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Weights & Biases (wandb) configuration
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=vislang-ultralow-resource
WANDB_ENTITY=your_wandb_entity

# TensorBoard configuration
TENSORBOARD_LOG_DIR=/logs/tensorboard

# Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry error tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# =============================================================================
# SECURITY & PRIVACY
# =============================================================================

# Encryption keys (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Data anonymization
ENABLE_ANONYMIZATION=true
PII_DETECTION_MODEL=spacy/en_core_web_sm

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development server configuration
DEV_SERVER_HOST=0.0.0.0
DEV_SERVER_PORT=8000
DEV_SERVER_RELOAD=true

# Testing configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/vislang_test_db
TEST_DATA_PATH=/data/test-data
PYTEST_WORKERS=4

# Debug settings
DEBUG=true
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=/tmp/profiling

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker configuration
DOCKER_REGISTRY=ghcr.io/yourusername
DOCKER_IMAGE_TAG=latest

# Kubernetes configuration
K8S_NAMESPACE=vislang-production
K8S_SERVICE_ACCOUNT=vislang-service-account

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================

# Data retention policy (days)
DATA_RETENTION_DAYS=365

# GDPR compliance
GDPR_COMPLIANCE_ENABLED=true
DATA_SUBJECT_RIGHTS_EMAIL=privacy@yourorganization.org

# Terms of service and privacy policy URLs
TERMS_OF_SERVICE_URL=https://yourorganization.org/terms
PRIVACY_POLICY_URL=https://yourorganization.org/privacy

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Experimental features
ENABLE_EXPERIMENTAL_MODELS=false
ENABLE_REAL_TIME_PROCESSING=false
ENABLE_DISTRIBUTED_TRAINING=false
ENABLE_ADVANCED_VALIDATION=true

# Language-specific features
ENABLE_RIGHT_TO_LEFT_LANGUAGES=true
ENABLE_COMPLEX_SCRIPTS=true
ENABLE_MULTILINGUAL_VALIDATION=true